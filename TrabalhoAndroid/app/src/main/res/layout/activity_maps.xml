<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Gray">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_Busca"
        android:text="@string/text_busca"
        android:textColor="@color/Black"
        android:layout_alignBaseline="@+id/edit_Busca"/>

    <AutoCompleteTextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/edit_Busca"
        android:layout_toRightOf="@+id/text_Busca"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/edit_Busca"
        android:id="@+id/button_Busca"
        android:text="@string/button_busca"
        android:onClick="onClickBusca"
        android:backgroundTint="@color/White"
        android:textColor="@color/Black"/>

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_below="@id/edit_Busca"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="br.unicamp.ft.f170775.trabalhomobile.MapsFragment" />



</RelativeLayout>